[ui]
ignore = ~/.hgignore-global
merge = internal:merge
username = Dave Miller <mercurial@dave-miller.com>

[alias]
ar = addremove
pish = push
qstatus = status --rev qparent

[defaults]
#diff = --unified 8
log = --graph
#qdiff = --unified 8
qseries = --summary

[diff]
git=1
nodates=1
showfunc=1

[hooks]
# Removed because it interferes with mq extension
#precommit.strict = x=`hg status -ud --color=always`; if [ -n "$x" ]; then echo "$x"; exit 1; fi; exit 0

[extensions]
boundmode = ~/.hgextensions/boundmode.py
color =
convert =
extdiff =
fetch =
graphlog =
mq =
pager =
rdiff = ~/.hgextensions/rdiff.py
record =
transplant =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = annotate, cat, diff, export, glog, log, status, qdiff
pager = LESS='FRSX' less

[auth]
djm.prefix = http://hg.davejamesmiller.com
djm.username = dave

djm2.prefix = http://hg.dave-miller.com
djm2.username = dave

# Put passwords in here:
# e.g.
# [auth]
# djm.password = ABC
%include .hgrc_local

