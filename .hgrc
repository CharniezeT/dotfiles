[ui]
ignore = ~/.hgignore-global
merge = internal:merge
username = Dave Miller <mercurial@dave-miller.com>

[alias]
ar = addremove
pish = push

[defaults]
diff = --git --show-function --unified 8
log = --graph

[hooks]
precommit.strict = x=`hg status -ud --color=always`; if [ -n "$x" ]; then echo "$x"; exit 1; fi; exit 0

[extensions]
boundmode = ~/.hgextensions/boundmode.py
color =
convert =
extdiff =
fetch =
graphlog =
mq =
pager =
record =
transplant =

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = annotate, cat, diff, export, glog, log, status, qdiff
pager = LESS='FRSX' less

[auth]
djm.prefix = http://hg.dave-miller.com
djm.username = dave

# Put passwords in here:
# e.g.
# [auth]
# djm.password = ABC
%include .hgrc_local
