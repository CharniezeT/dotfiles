[user]
    name = Dave James Miller
    email = dave@davejamesmiller.com

[core]
    excludesfile = ~/.gitignore-global

[color]
    branch = auto
    status = auto
    diff = auto
    grep = auto

[pack]
    threads = 0

[pager]
    ls-files = true
    status = true

[push]
    default = tracking

[alias]
    a = add -A
    addremove = add -A
    #amend = !git commit --amend -C HEAD --date=\"$(date -R)\"
    amend = commit --amend --no-edit --reset-author
    ar = add -A
    b = branch
    ba = branch -a
    branches = branch -avv
    c = commit -m
    ci = commit
    cim = commit -m
    co = checkout
    cp = cherry-pick
    d = diff                               #--find-copies --irreversible-delete
    dc = diff --cached                     #--find-copies --irreversible-delete
    dcw = diff --cached --ignore-all-space #--find-copies --irreversible-delete
    dw = diff --ignore-all-space           #--find-copies --irreversible-delete
    edit = commit --amend --reset-author
    f = fetch -v --prune
    fe = fetch -v --prune
    g = grep --untracked --line-number
    g3 = grep --untracked --line-number --context=3
    g6 = grep --untracked --line-number --context=6
    g9 = grep --untracked --line-number --context=9
    gi = grep --untracked --line-number --ignore-case
    gi3 = grep --untracked --line-number --ignore-case --context=3
    gi6 = grep --untracked --line-number --ignore-case --context=6
    gi9 = grep --untracked --line-number --ignore-case --context=9
    glog = log --decorate --graph
    id = log --pretty=format:'ID:    %h%nDate:  %aD%nRefs:%d' --abbrev-commit --date=short -1
    ignored = ls-files --others -i --exclude-standard --directory
    in = incoming
    io = inout
    l = log --decorate --name-status
    l1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lf = log --decorate --name-status
    ll = log --decorate
    lp = log --decorate --patch
    m = merge
    mi = merge-into
    mt = mergetool
    out = outgoing
    p = push
    remotes = remote -v
    root = rev-parse --show-toplevel
    s = status
    serve = instaweb
    sh = repl
    sq = squash
    st = status
    sub = submodule
    sync = !git submodule sync && git submodule update --init
    tags = tag
    todo = grep --untracked --line-number 'TODO\\|XXX\\|FIXME'
    web = instaweb

[github]
    user = davejamesmiller

[browser "none"]
    cmd = git-web-browser

[instaweb]
    httpd = apache2
    browser = none

[merge]
    conflictstyle = diff3

[rerere]
    enabled = true
