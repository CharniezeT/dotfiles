[user]
    name = Dave James Miller
    email = dave@davejamesmiller.com

[core]
    excludesfile = ~/.gitignore-global

[color]
    branch = auto
    status = auto
    diff = auto
    grep = auto

[pack]
    threads = 0

[pager]
    ls-files = true
    status = true

[push]
    default = tracking

[alias]
    a = add -A
    addremove = add -A
    amend = commit --amend -C HEAD
    ar = add -A
    b = branch
    ba = branch -a
    branches = branch -avv
    c = commit -m
    ci = commit
    cim = commit -m
    co = checkout
    cp = cherry-pick
    d = diff                               #--find-copies --irreversible-delete
    dc = diff --cached                     #--find-copies --irreversible-delete
    dcw = diff --cached --ignore-all-space #--find-copies --irreversible-delete
    dw = diff --ignore-all-space           #--find-copies --irreversible-delete
    edit = commit --amend
    fe = fetch
    g = grep --untracked
    glog = log --graph
    id = log --pretty=format:'ID:    %h%nDate:  %aD%nRefs:%d' --abbrev-commit --date=short -1
    ignored = ls-files --others -i --exclude-standard --directory
    in = incoming
    io = inout
    l = log
    l1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    mt = mergetool
    out = outgoing
    p = push
    remotes = remote -v
    root = rev-parse --show-toplevel
    s = status
    serve = instaweb
    sh = repl
    st = status
    sub = submodule
    sync = !git submodule sync && git submodule update --init
    tags = tag
    todo = grep --untracked 'TODO\\|XXX\\|FIXME'
    web = instaweb

[github]
    user = davejamesmiller

[browser "none"]
    cmd = git-web-browser

[instaweb]
    httpd = apache2
    browser = none
