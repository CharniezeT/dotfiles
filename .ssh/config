# General
Host *
    Compression yes
    ForwardAgent yes
    ServerAliveInterval 15

    # Reuse connections
    ControlMaster auto
    ControlPath ~/.ssh/control-master-%l-%r@%h:%p
    ControlPersist 5m

# Public
Host bitbucket
    Hostname bitbucket.org
    User git

Host bitbucket.org
    Hostname bitbucket.org
    User git

Host github
    Hostname github.com
    User git

Host github.com
    Hostname github.com
    User git

