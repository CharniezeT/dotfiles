# General
Host *
    Compression yes
    ServerAliveInterval 15

    # Reuse connections - disabled because Cygwin doesn't support it and
    # unfortunately crashes if you try to use it
    # http://stackoverflow.com/a/21439862/167815
    #ControlMaster auto
    #ControlPath ~/.ssh/control-master-%l-%r@%h:%p
    #ControlPersist 5m

    # Force it to use my key by default, not the Vagrant public key
    IdentityFile ~/.ssh/davejamesmiller.pub
    IdentitiesOnly yes

# Sites
Host dave
    Hostname baritone.alberon.co.uk
    User dave
    ForwardAgent yes

# Servers
Host *.alberon.co.uk baritone bass tenor
    User root
    ForwardAgent yes

Host baritone
    Hostname baritone.alberon.co.uk

Host bass
    Hostname bass.alberon.co.uk

Host tenor
    Hostname tenor.alberon.co.uk

Host jericho jericho.alberon.co.uk
