#!/bin/bash
name="$1"

if [ -z "$name" ]; then
    echo "Usage: git init-precipuus <name>" >&2
    exit 1
fi

server="dave@precipuus.davejamesmiller.com"
path="git/$name.git"

ssh $server "git init --bare $path"
git remote add origin "$server:$path"
git branch --set-upstream master origin/master
git push --all
