#!/bin/bash

# Get full path to the editor in case it's not in the path after running sudo
editor=`which "$GEDITOR"`

if [ -z "$editor" ]; then
    editor="$GEDITOR"
fi

if [ -z "$editor" ]; then
    editor="$VISUAL"
fi

if [ -z "$editor" ]; then
    editor="$EDITOR"
fi

# 'e' or 'se'?
if [ "`basename $0`" = "se" ]; then
    sudo "$editor" "$@"
else
    "$editor" "$@"
fi
