#!/bin/bash

# Go up the directory tree until we find the correct directory or reach /
while [ "`pwd`" != "/" -a ! -x "./composer.phar" -a ! -d "./composer.phar" ]
do
    cd ..
done

# Run Composer
if [ -x "./composer.phar" -a ! -d "./composer.phar" ]
then
    ./composer.phar "$@"
else
    echo "You do not appear to be within a Composer directory" >&2
fi
